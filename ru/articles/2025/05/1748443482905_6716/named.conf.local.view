view "local" {
  match-clients { local; };
  zone "hostname.local" { type master; file "/etc/bind/zone.hostname.local"; };
};

view "public" {
  match-clients { any; };
  zone "example.org" { type master; file "/etc/bind/zone.example.org"; };
  zone "1.168.192.in-addr.arpa" { type master; file "/etc/bind/zone.example.org.rev"; };
};
